<UserControl x:Class="ClientApp.UserControls.ParentUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientApp.UserControls"
             mc:Ignorable="d" 
             Height="30" Width="90">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Path Grid.Column="0" Fill="White" Data="M 0 6 L 12 6  L 6 0 Z" Height="12" Stretch="Fill" VerticalAlignment="Center"/>
        <TextBlock Text="Parent" FontSize="16" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>
    </Grid>
</UserControl>
