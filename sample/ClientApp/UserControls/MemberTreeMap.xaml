<UserControl x:Class="ClientApp.UserControls.MemberTreeMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer x:Name="scroll" 
                      Background="#FF75888C" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto" 
                      ScrollChanged="scroll_ScrollChanged">
            <Canvas Margin="40" x:Name="canvas" 
                    Background="#FF25383C" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"></Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
